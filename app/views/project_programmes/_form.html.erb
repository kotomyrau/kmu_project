<%= simple_form_for model, method: verb, url: url do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <%= f.collection_select :project_id, @projects, :id, :title, selected: @project.id%>
    <%= f.collection_select :programme_id, @programmes, :id, :name %>
  <%= f.button :submit %>
<% end %>
