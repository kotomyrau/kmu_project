
<div class="slideshow-container">
  <!-- Full-width slides/quotes -->
  <div class="text-slide">
    <h5>Aspiring software engineer looking for a job in Tokyo, Japan</h5>
    <p class="slide-link"><%= link_to "Read more...", about_path %></p>
  </div>

  <div class="text-slide">
    <h5>Currently working on a Portfolio Project</h5>
    <p class="slide-link"><%= link_to "View Projects", projects_path %></p>
  </div>

  <div class="text-slide">
    <h5>My favorite project has been </h5>
    <p class="slide-link"><%= link_to "Project-name", "#" %></p>
  </div>

  <!-- Next/prev buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>

<!-- Dots/bullets/indicators -->
<div class="dot-container">
  <span class="dot" onclick="currentSlide(1)"></span>
  <span class="dot" onclick="currentSlide(2)"></span>
  <span class="dot" onclick="currentSlide(3)"></span>
</div>


<% @preview_projects.each do |project| %>
  <div class="preview_card">
    <%= cl_image_tag project.project_image.key, height: 300, width: 400, crop: :fill %>
    <%= link_to project.title, project_path(project) %>
  </div>
<% end %>

<% @projects.each do |project| %>
  <%= project.title %><br>
  <%= project.description %><br>
  <% project.programmes.each do |programme| %>
    <%= link_to programme.name, programme_path(programme) %><br>
  <% end %>
  <%= link_to "View", project_path(project) %><br>
<% end %>
<%= link_to 'View All Projects', projects_path  %>

