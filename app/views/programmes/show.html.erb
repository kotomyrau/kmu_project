<div class="main-container">
    <div class="page-title">
      <h5><%= @programme.name %></h5>
    </div>

    <div class="grid-container-cards">
        <% @project_programme.each_with_index do |project, index| %>
        <div class="card-container">
            <div class="card-image">
                <%= link_to (cl_image_tag  project.project.project_image.key, overflow: :hidden), project_path(project.project) %>
            </div>
            <div class="card-text">
                <h5><%= project.project.category %></h5>
                <h3><%= link_to project.project.title, project_path(project.project) %></h3>
                <p><%= project.project.project_date.strftime("%b %Y")%></p>
            </div>
        </div>
        <% end %>
    </div>
    <div class="basic-btn">
        <%= link_to 'View all Projects', projects_path %>
    </div>
</div>
