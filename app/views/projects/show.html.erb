<% if @project.project_image.attached? %>
    <div class="main-image">
        <%= cl_image_tag @project_image.key, overflow: :hidden %>
    </div>
 <% end %>



<div class="project-info">
    <div class="sub-title">
        <h5><strong><%= @project.title %></strong></h5>
    </div>
    <div class="project-left">
        <!-- <h5>DESCRIPTION</h5> -->
        <p><%= @project.description %></p>
    </div>
    <div class="project-right">
        <h5>Date</h5>
            <p><%= @project_date %></p>
        <h5>Link</h5>
            <a href=<%= @project.link %>>Github</a>
    </div>
        <% @project.programmes.each do |programme| %>
            <div class="preview-programmes">
                <%= link_to programme.name, programme_path(programme) %>
            </div>
            <% if user_signed_in? %>
            <div class="user-settings">
                <%= link_to "Ã—", user_project_project_programme_path(@user, @project, programme.id), method: :delete, data: { confirm: "#{programme.name} will be removed from #{@project.title}" }%>
            </div>
          <% end %>
        <% end %>

<br><h5 class="user-settings"><%= link_to "Add Programme", new_user_project_project_programme_path(@user, @project)  %></h5>
</div>

<div class="image-container">
    <% (0...@project.project_images.count).each do |image| %>
      <%= cl_image_tag (@project.project_images[image]).key, overflow: :hidden%>
    <% end %>
</div>
<h5>Programmes</h5>
<% @project_programme.each do |pro|%>
  <%= link_to pro.programme.name, programme_path(pro.programme) %>

<% end %>

<h5>Edit Project</h5>
  <% if user_signed_in? %>
    <%= link_to "Add Programme", new_user_project_project_programme_path(@user, @project)  %> <br>
    <%= link_to "Edit this project", edit_user_project_path(@user, @project)  %>
  <% end %>
